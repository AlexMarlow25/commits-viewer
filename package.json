{
  "publisher": "local-dev",
  "name": "commit-timesheet-helper",
  "displayName": "Commit Timesheet Helper",
  "version": "1.0.0",
  "description": "View grouped commits and copy daily summaries for timesheets inside VS Code.",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexMarlow25/commits-viewer.git"
  },
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onCommand:commitTimesheet.open"
  ],
  "scripts": {
    "build:webview": "vite build",
    "watch:webview": "vite build --watch",
    "package:local": "npm run build:webview && NODE_OPTIONS=\"--require ./scripts/vsce-cpu-fix.cjs\" npx vsce package --skip-license",
    "package:patch": "npm version patch --no-git-tag-version && npm run package:local",
    "release": "semantic-release",
    "hooks:install": "git config core.hooksPath scripts/githooks",
    "postinstall": "npm run hooks:install"
  },
  "contributes": {
    "commands": [
      {
        "command": "commitTimesheet.open",
        "title": "Commit Timesheet: Open Viewer"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Commit Timesheet Helper",
      "properties": {
        "commitTimesheet.daysBack": {
          "type": "number",
          "default": 30,
          "description": "How many days back to fetch commits (uses git --since)."
        },
        "commitTimesheet.author": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Optional git author filter. If null, falls back to `git config user.name`."
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/node": "^25.0.6",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vscode/vsce": "^3.7.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue": "^3.5.26"
  }
}
